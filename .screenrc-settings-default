shell -bash

# Use "`" instead of CTRL-a
escape `~

# NETHACK!!!11
nethack on

startup_message off
defscrollback 5000
autodetach on
logfile "$HOME/var/log/screen/%Y%m%d-%t"

# This is a mix between:
# - http://magazine.redhat.com/2007/09/27/a-guide-to-gnu-screen/
# - http://superuser.com/a/51995
# See also: http://www.kilobitspersecond.com/2014/02/10/understanding-gnu-screens-hardstatus-strings/
hardstatus alwayslastline "%{= kG}[ %{G}%H %{g}][ %{b kw} %{-b kw}%u %-Lw%{= mW}%50> %n%f %t %{-}%+Lw%<%= %{g}][%{B} %Y%m%d %{W}%c %{g}]"
