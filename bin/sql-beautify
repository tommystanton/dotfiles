#!/usr/bin/perl

# From Andrew Grangaard:
# https://github.com/spazm/config/blob/master/bin/sql-beautify.pl
use warnings;
use strict;
use SQL::Beautify; # TODO "Fatpack" this (App::Fatpacker)

local $/;
my $sql = SQL::Beautify->new( 
    query => <STDIN>, 
    spaces => 4, 
    break => "\n" 
);
print $sql->beautify;
