shell -bash

# Use "`" instead of CTRL-a
escape `~

# NETHACK!!!11
nethack on

startup_message off
defscrollback 5000
autodetach on
logfile "$HOME/var/log/screen/%Y%m%d-%t"

hardstatus alwayslastline
# Redhat--
# see http://magazine.redhat.com/2007/09/27/a-guide-to-gnu-screen/
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f %t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %Y%m%d %{W}%c %{g}]'
